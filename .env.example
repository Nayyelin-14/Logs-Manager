# -----------------------
# Backend Environment
# -----------------------

# Port your backend server runs on
PORT=Desired_port || 4500 

# JWT secrets
ACCESS_TOKEN_SECRET=your_access_token_secret_here
REFRESH_TOKEN_SECRET=your_refresh_token_secret_here

# Prisma database URL (Postgres on Neon)
DATABASE_URL=your_prisma_database_url_here

# Redis (for caching or session management)
REDIS_URL=your_redis_url_here
REDIS_HOST=localhost_or_upstash_redis_url
REDIS_PORT=6379_or_upstash_port
REDIS_PASSWORD=your_redis_password_here

# Gmail account for sending emails via Nodemailer
GMAIL_USER=your_gmail_user_here
GMAIL_PASS=your_gmail_password_here

# -----------------------
# Frontend Environment
# -----------------------

# Backend API URL (used by frontend to call backend endpoints)
VITE_API_URL="http://localhost:4500/api"
# If backend deployed elsewhere, replace with URL
VITE_API_URL="https://your-backend-url.com/api"